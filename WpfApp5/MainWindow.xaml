<Window x:Class="WpfApp5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp5"
        mc:Ignorable="d"
        Title="Авторизация" Height="450" Width="800">
    <Grid>
        <Label Content="Логин:" HorizontalAlignment="Center" Height="37" Margin="0,66,0,0" VerticalAlignment="Top" Width="74" FontSize="20"/>
        <TextBox x:Name="txtLogin" HorizontalAlignment="Center" Height="31" Margin="0,108,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="154" FontSize="20"/>
        <Button x:Name="bntEntry" Content="Войти" HorizontalAlignment="Center" Height="49" Margin="0,284,0,0" VerticalAlignment="Top" Width="176" FontSize="20" Click="bntEntry_Click"/>
        <Label Content="Пароль:" HorizontalAlignment="Center" Height="37" Margin="0,167,0,0" VerticalAlignment="Top" Width="84" FontSize="20"/>
        <TextBox x:Name="txtPassword" HorizontalAlignment="Center" Height="31" Margin="0,235,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="154" FontSize="20"/>

    </Grid>
</Window>
